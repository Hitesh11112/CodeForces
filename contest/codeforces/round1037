#include <bits/stdc++.h>
using namespace std;

int main() {
  ios::sync_with_stdio(false);
  cin.tie(nullptr);

  int test;
  cin >> test;

  while (test--) {
    int n, k;
    cin >> n >> k;

    vector<int> arr(n);
    for (auto &i : arr) {
      cin >> i;
    }
    bool rest = false, cnt = 0, ans = 0;
    for (int i = 0; i < n; ++i) {
      if (arr[i] == 0) {
        if (rest) {
          rest = false;
          continue;
        }
        cnt += 1;
      } else {
        cnt = 0;
        rest = false;
      }
      if (cnt == k) {
        ans += 1;
        rest = true;
      }
    }
  }
  cout << ans << endl;

  return 0;
}